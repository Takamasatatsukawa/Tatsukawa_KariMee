<!DOCTYPE html>
<html>
<head>
  <title>使用者登録</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbo-track': 'reload' %>
  <%= javascript_importmap_tags %>
</head>

<body>
  <div class="container">
    <div class="hero-text">
      <h1>使用者登録</h1>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-row">
        <div class="form-group col-md-6">
          <%= f.label :name, "氏 名" %>
          <%= f.text_field :name, class: 'form-control', autofocus: true %>
        </div>

        <div class="form-group col-md-6">
          <%= f.label :email, "Eメール" %>
          <%= f.email_field :email, class: 'form-control', autofocus: true %>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-md-6">
          <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %>
          <%= f.password_field :password, class: 'form-control', autocomplete: "new-password" %>
        </div>

        <div class="form-group col-md-6">
          <%= f.label :password_confirmation, "パスワード（確認）" %>
          <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :contact_information, "連絡先" %>
        <%= f.text_field :contact_information, class: 'form-control' %>
      </div>

      <div class="form-group">
        <label for="inputAddress">Address</label>
        <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St">
      </div>

      <div class="form-group">
        <label for="inputAddress2">Address 2</label>
        <input type="text" class="form-control" id="inputAddress2" placeholder="Apartment, studio, or floor">
      </div>

      <div class="form-row">
        <div class="form-group col-md-6">
          <%= f.label :net_hunting_license, "網猟免許" %>
          <%= f.check_box :net_hunting_license, class: 'form-check-input' %>
        </div>

        <div class="form-group col-md-6">
          <%= f.label :trap_hunting_license, "わな猟免許" %>
          <%= f.check_box :trap_hunting_license, class: 'form-check-input' %>
        </div>

        <div class="form-group col-md-6">
          <%= f.label :first_class_hunting_license, "第一種猟銃免許" %>
          <%= f.check_box :first_class_hunting_license, class: 'form-check-input' %>
        </div>

        <div class="form-group col-md-6">
          <%= f.label :second_class_hunting_license, "第二種猟銃免許" %>
          <%= f.check_box :second_class_hunting_license, class: 'form-check-input' %>
        </div>
      
        <div class="form-group col-md-4">
        <label for="inputState">登録地域</label>
        <select id="inputState" class="form-control">
          <option selected>Choose...</option>
          <option>豊後大野市</option>
        </select>
      </div>

      <!-- 登録ボタンをフォーム全体の最後に配置 -->
      <div class="form-row">
        <div class="form-group col-md-12">
          <%= f.submit "登録", class: 'btn btn-primary' %>
        </div>
    

    

  <% end %>   

</body>
</html>
