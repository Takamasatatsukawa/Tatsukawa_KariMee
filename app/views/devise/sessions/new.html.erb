<!DOCTYPE html>
<html>
<head>
  <title>ログインページ</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbo-track': 'reload' %>
  <%= javascript_importmap_tags %>
</head>
<body>
  <div class="container">
    <div class="hero-text">
      <h2>ログイン</h2>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form' }) do |f| %>
      <div class="form-row">
        <div class="form-group col-md-12">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-md-12">
          <%= f.label :password, "パスワード" %>
          <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-row">
          <div class="form-group col-md-12">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "ログインを記憶する" %>
          </div>
        </div>
      <% end %>

      <% if flash[:alert] %>
        <p class="alert alert-danger"><%= flash[:alert] = "無効なメールアドレスまたはパスワードです。" %></p>
      <% end %>
      <% if flash[:notice] %>
        <p class="alert alert-info"><%= flash[:notice] = "アカウントの確認が必要です。"%></p>
      <% end %>

      <!-- ログインボタンをフォーム全体の最後に配置 -->
      <div class="form-row">
        <div class="form-group col-md-12">
          <%= f.submit "ログイン", class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</body>
</html>
